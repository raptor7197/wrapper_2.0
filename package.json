{
  "name": "gemini-gpt-app",
  "version": "1.0.0",
  "description": "Gemini-powered GPT application with SolidJS frontend and Express backend",
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "server": "node server.js",
    "server:dev": "nodemon server.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "install:server": "npm install express cors dotenv @google/generative-ai",
    "install:dev": "npm install --save-dev nodemon concurrently"
  },
  "license": "MIT",
  "devDependencies": {
    "vite": "^6.0.0",
    "vite-plugin-solid": "^2.11.1",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.4",
    "solid-js": "^1.9.3",
    "tailwindcss": "^4.0.4",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "@google/generative-ai": "^0.2.1"
  }
}
